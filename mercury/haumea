
TARGET_URL="michael@haumea:~/Movies"
case "$1" in
  "-m" | "-movies" )
    shift
    SOURCES="${@:1}"
  ;;
  * )
    TARGET_URL="$TARGET_URL/_current"
    SOURCES="$@"
  ;;
esac

echo "rsync to $TARGET_URL"
rsync --progress --partial -r --perms --chmod=Du=rwx,Dgo=rx,Fa=rw --exclude="~u*" "$SOURCES" "$TARGET_URL"
